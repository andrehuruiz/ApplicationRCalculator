<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/re">


    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/numero1"
        android:layout_marginLeft="35dp"
        android:background="#bad9dbe0"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/b_clear" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/b_clear"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/numero1"
        android:layout_alignStart="@+id/b_uno"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/b_resta"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/b_resta"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/b_clear"
        android:layout_toEndOf="@+id/b_diez"
        android:textSize="50dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="I"
        android:id="@+id/b_uno"
        android:layout_alignParentStart="false"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/b_clear" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="V"
        android:id="@+id/b_cinco"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/b_uno"
        android:layout_toEndOf="@+id/b_uno" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/b_diez"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/b_resta"
        android:layout_toEndOf="@+id/b_cinco"
        android:layout_toRightOf="@+id/b_cinco"
        android:layout_alignBaseline="@+id/b_cinco" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/b_cincuenta"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/b_resta"
        android:layout_toStartOf="@+id/b_cinco"
        android:layout_alignParentBottom="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/b_cien"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/b_cincuenta"
        android:layout_toEndOf="@+id/b_cincuenta" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/b_quinientos"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/b_diez"
        android:layout_toEndOf="@+id/b_cinco" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/b_mil"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/b_cincuenta"
        android:layout_alignStart="@+id/b_cincuenta" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/b_suma"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/b_quinientos"
        android:layout_alignStart="@+id/b_resta"
        android:textStyle="bold"
        android:textSize="50dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/igual"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/b_mil"
        android:layout_toEndOf="@+id/b_mil"
        android:textSize="50dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/numero1"
        android:background="#bad9dbe0"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/textView2"
        android:background="#bad9dbe0"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/b_quinientos"
        android:layout_marginEnd="27dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/igual"
        android:background="#bad9dbe0"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="190dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginLeft="104dp"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView2" />

</RelativeLayout>
